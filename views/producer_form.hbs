<div class="container">


<form action='' method='POST' class="mt-3 col-md-6">
    <h1 class="mt-2">{{title}}</h1>
    <div class="form-group">
        <h5><label for="name" class="mt-3">Producer Name</label></h5>
        <input type="text" name="name" class="form-control mb-0" placeholder="ex. Domaine de la RomanÃ©e-Conti" value="{{name}}">
    </div>
    <div class="form-group">
        <h5><label for="region" class="">Region</label></h5>
        <input type="text" name="region" class="form-control mb-0" placeholder="ex. Bourgogne" value="{{region}}">
    </div>
    {{#each errors}}

    <p class="text-danger mt-0">{{this.msg}}</p>
    {{/each}}
    <input type="submit" value="Add Producer" class="btn btn-primary btn-sm">
</form>
</div>