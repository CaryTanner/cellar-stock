<div class="container-fluid col-md-6 justify-content-center">
<h5 class="mt-3 text-secondary">{{title}}</h5>
<h2 class="mt-3">{{producer.name}}</h2>

{{#if producer_bottleInstances}}

<h6 class="mt-3 text-danger">Remove these bottles from Cellar Stock before you delete this producer</h6>
    
    {{#each producer_bottleInstances}}
    <ul class="list-group mt-3">

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <ul class="list-group list-group-horizontal-md">
                            <li class="list-group-item flex-fill">{{this.origin.country}}</li>
                            <li class="list-group-item flex-fill">{{this.origin.region}}</li>
                            <li class="list-group-item flex-fill">{{this.village}}</li>
                            <li class="list-group-item flex-fill">{{this.vineyard}}</li>

                        </ul>


                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Classification: <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.classification}}</h6>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Age: <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.age}}</h6>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Category: <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.category}}</h6>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{!-- variety is in an array to provide for wine with multiple grape varieties --}}
                        Variety: {{#each this.variety}}
                                        <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.varietyName}}</h6>
                                        {{/each}}
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bottle Count
                        <h5 class="align-self-center mt-0 mb-0 ml-1"><span class="badge badge-primary badge-pill ml-2">{{this.count}}</span></h5>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bin No.
                        <h5 class="align-self-center mt-0 mb-0 ml-1"><span class="badge badge-primary badge-pill ml-2">{{this.bin}}</span></h5>
                    </li>


                    <li class="list-group-item d-flex justify-content-start align-items-center">
                        <a href="/catalog/bottleinstance/{{this._id}}"><button class="btn btn-outline-primary btn-sm mr-2">Full Info</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/update"><button class="btn btn-outline-primary btn-sm mr-2">Update</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/delete"><button class="btn btn-outline-danger btn-sm ">Delete</button></a>
                    </li>
                </ul>
    {{/each}}




    {{else}}
    <p class="mt-4">Do you really want to delete this producer?</p>
    {{/if}}

    <form  method="POST">
        <div class="form-group">
        <input type="hidden" name="producerid" id="producerid" class="form-control "  value="{{producer._id}}">
    </div>
    
   
    
    <input type="submit" value="Delete Producer" class="btn btn-danger btn-md mt-3 mb-0">
    </form>

</div>