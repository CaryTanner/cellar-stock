<div class="container">
<h1 class="mt-2">{{title}}</h1>

<form action='' method='POST' class="mt-3">
    <div class="form-group">
        <h5><label for="country" class="">Country</label></h5>
        <input type="text" name="country" class="form-control mb-0" placeholder="ex. Germany" value="{{country}}">
    </div>
    <div class="form-group">
        <h5><label for="region" class="">Region</label></h5>
        <input type="text" name="region" class="form-control mb-0" placeholder="ex. Mosel" value="{{region}}">
    </div>
   
    {{#each errors}}

    <p class="text-danger mt-0">{{this.msg}}</p>
    {{/each}}
    <input type="submit" value="Add Origin" class="btn btn-primary btn-sm">
</form>
</div>