<div class="container-fluid col-md-5 justify-content-center">
        <h3 class="mt-3 ">{{title}}</h3>
    <h6 class="text-secondary">Sorted by: Bin No.</h6>
    
    {{#each bottleInstance_list}}
       
                <ul class="list-group  mt-3 " >
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <h2 class="mt-0 mb-0">{{this.producer.name}}</h2>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <ul class="list-group list-group-horizontal-lg ">
                            <li class="list-group-item ">{{this.origin.country}}</li>
                            <li class="list-group-item ">{{this.origin.region}}</li>
                            <li class="list-group-item ">{{this.village}}</li>
                            <li class="list-group-item ">{{this.vineyard}}</li>

                        </ul>


                    </li>
                    
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Age: <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.age}}</h6>
                    </li>
                    
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{!-- variety is in an array to provide for wine with multiple grape varieties --}}
                        Variety: {{#each this.variety}}
                                        <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.varietyName}}</h6>
                                        {{/each}}
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bin No.
                       <h5 class="align-self-center mt-0 mb-0"><span class="badge badge-primary badge-pill ml-2">{{this.bin}}</span></h5> 
                    </li>
                   <li class="list-group-item d-flex justify-content-start align-items-center">
                    <a href="bottleinstance/{{this._id}}"><button class="btn btn-outline-primary btn-sm mt-1 mr-2">Full Info</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/update"><button class="btn btn-outline-primary btn-sm mt-1 mr-2">Update</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/delete"><button class="btn btn-outline-danger btn-sm  mt-1">Delete</button></a>

                    </li>
                    

                </ul>



       

        {{/each}}
        
    
</div>