<div class="container">
    <h1 class="mt-2">{{title}}</h1>
    <h6>Sorted by: Bin No.</h6>
    
    <div>{{#each bottleInstance_list}}
       
                <ul class="list-group col-md-6 mt-3 ">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <h2>{{this.producer.name}}</h2>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <ul class="list-group list-group-horizontal-lg ">
                            <li class="list-group-item ">{{this.origin.country}}</li>
                            <li class="list-group-item ">{{this.origin.region}}</li>
                            <li class="list-group-item ">{{this.village}}</li>
                            <li class="list-group-item ">{{this.vineyard}}</li>

                        </ul>


                    </li>
                    {{!-- <li class="list-group-item d-flex justify-content-between align-items-center">
                        Classification: <h6>{{this.classification}}</h6>
                    </li> --}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Age: <h5 class="align-self-center mt-0 mb-0 ml-1">{{this.age}}</h5>
                    </li>
                    {{!-- <li class="list-group-item d-flex justify-content-between align-items-center">
                        Category: <h6>{{this.category}}</h6>
                    </li> --}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{!-- variety is in an array to provide for wine with multiple grape varieties --}}
                        Variety: {{#each this.variety}}
                                        <h5 class="align-self-center mt-0 mb-0 ml-1">{{this.varietyName}}</h5>
                                        {{/each}}
                    </li>
{{!-- 
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bottle Count
                        <h5><span class="badge badge-secondary badge-pill ml-2">{{this.count}}</span></h5>
                    </li> --}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bin No.
                       <h5 class="align-self-center mt-0 mb-0"><span class="badge badge-secondary badge-pill ml-2">{{this.bin}}</span></h5> 
                    </li>
                   
                    

                </ul>



       
<a href="bottleinstance/{{this._id}}"><button class="btn btn-outline-primary btn-sm  mt-2 mr-2">Full Info</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/update"><button class="btn btn-outline-primary btn-sm mt-2 mr-2">Update</button></a>
                        <a href="/catalog/bottleinstance/{{this._id}}/delete"><button class="btn btn-outline-danger btn-sm mt-2">Delete</button></a>

        {{/each}}
        
    </div>
</div>