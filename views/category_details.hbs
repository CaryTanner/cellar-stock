<div class="container-fluid col-md-6 justify-content-center">
    <h5 class="text-secondary mt-3">Wines by Category</h5>
    <h1 class="mt-1">{{title}}</h1>

    <div>{{#each category_details}}
        
                <ul class="list-group mt-3">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <h2 class="mt-0 mb-0">{{this.producer.name}}</h2>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <ul class="list-group list-group-horizontal-md">
                            <li class="list-group-item flex-fill">{{this.origin.country}}</li>
                            <li class="list-group-item flex-fill">{{this.origin.region}}</li>
                            <li class="list-group-item flex-fill">{{this.village}}</li>
                            <li class="list-group-item flex-fill">{{this.vineyard}}</li>

                        </ul>


                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Age: <h6>{{this.age}}</h6>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{!-- variety is in an array to provide for wine with multiple grape varieties --}}
                        Variety: {{#each this.variety}}
                                        <h6>{{this.varietyName}}</h6>
                                        {{/each}}
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Bin No.
                        <h5><span class="badge badge-primary badge-pill ml-2">{{this.bin }}</span></h5>
                    </li>
                    <li class="list-group-item d-flex justify-content-start align-items-center">
                            <a href="/catalog/bottleinstance/{{this._id}}"><button class="btn btn-outline-primary btn-sm ">Full Info</button></a>
                    </li>
                   

                </ul>



       


        {{/each}}
    </div>

    {{#if category_details}}

    {{else}}
    <h4 class="mt-4">Time to go shopping!</h4>
    <h6>There aren't any wines in this category.</h6>
    {{/if}}
</div>