<div class="container-fluid col-md-6 justify-content-center">
    <h5 class="mt-3 text-secondary class=" align-self-center mt-0 mb-0 ml-1"">{{title}}</h5>
    <h2 class="mt-0 mb-0">{{data.producer.name}}</h2>
    <ul class="list-group mt-2">
        {{#each data.producer_bottleInstances}}

        <ul class="list-group mt-3">

            <li class="list-group-item d-flex justify-content-between align-items-center">
                <ul class="list-group list-group-horizontal-md">
                    <li class="list-group-item flex-fill">{{this.origin.country}}</li>
                    <li class="list-group-item flex-fill">{{this.origin.region}}</li>
                    <li class="list-group-item flex-fill">{{this.village}}</li>
                    <li class="list-group-item flex-fill">{{this.vineyard}}</li>

                </ul>


            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Age: <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.age}}</h6>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{!-- variety is in an array to provide for wine with multiple grape varieties --}}
                Variety: {{#each this.variety}}
                <h6 class="align-self-center mt-0 mb-0 ml-1">{{this.varietyName}}</h6>
                {{/each}}
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Bin No.
                <h5 class="align-self-center mt-0 mb-0 ml-1"><span
                        class="badge badge-primary badge-pill ml-2">{{this.bin}}</span></h5>
            </li>
            <li class="list-group-item d-flex justify-content-start align-items-center">
                <a href="/catalog/bottleinstance/{{this._id}}"><button
                        class="btn btn-outline-primary btn-sm mr-2 ">Full Info</button></a>
            </li>


        </ul>






        {{/each}}
    </ul>
    {{#if data.producer_bottleInstances}}

    {{else}}
    <h4 class="mt-4">Time to go shopping!</h4>
    <h6>There aren't any {{data.producer.name}} wines in your cellar yet.</h6>
    {{/if}}
    <a href="/catalog/producer/{{data.producer._id}}/delete"><button class="btn btn-outline-danger btn-md mt-3">Delete
            Producer</button></a>
</div>